#!/usr/bin/env bash

# bin/start: Start local dev
#
# When to use:
#  - When you want to run the WP server

set -euo pipefail
IFS=$'\n\t'

cd "$(dirname "$0")/.."

echo "$(tput setaf 5)"Starting DDEV..."$(tput sgr0)"
ddev start
echo "$(tput setaf 2)"DDEV started"$(tput sgr0)"
echo ""


echo "$(tput setaf 5)"Launching Project in browser..."$(tput sgr0)"
ddev launch
echo ""

echo "$(tput setaf 5)"Starting Vite..."$(tput sgr0)"
cd wp-content/themes/wp-starter
ddev npm install
ddev npm run dev
