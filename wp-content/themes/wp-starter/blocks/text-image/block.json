{
  "name": "text-image",
  "title": "Text & Image",
  "description": "Displays the Text & Image Component.",
  "icon": "align-left",
  "category": "components",
  "textdomain": "wp-starter",
  "keywords": ["photo", "upload", "media", "picture", "image", "align", "left", "right", "content", "text"],
  "allowedBlocks": [
    "core/media-text",
    "core/paragraph",
    "core/heading",
    "core/group"
  ],
  "attributes": {
    "align": {
      "type": "string",
      "default": "full"
    },
    "style": {
      "type": "object",
      "default": {
        "spacing": {
          "padding": {
            "top": "var:preset|spacing|30",
            "bottom": "var:preset|spacing|30",
            "left": "var:preset|spacing|20",
            "right": "var:preset|spacing|20"
          }
        }
      }
    }
  },
  "supports": {
    "jsx": true,
    "mode": false,
    "alignWide": true,
    "color": {
      "background": true
    },
    "spacing": {
      "padding": ["top", "bottom"]
    },
    "layout": {
      "default": {
        "type": "constrained"
      },
      "allowOrientation": false,
      "allowCustomContentAndWideSize": false
    }
  },
  "variations": [
    {
      "name": "text-image-default",
      "title": "Text & Image Default",
      "scope": ["transform"],
      "isDefault": true
    }
  ],
  "acf": {
    "mode": "preview"
  }
}
