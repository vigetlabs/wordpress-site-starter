{#
  Block: Image with Caption
#}

{% set template = [
  [ 'core/image' ]
] %}
{% set allowed = [ 'core/image' ] %}
{% set inner = {
	template: template,
	allowedBlocks: allowed,
	templateLock: 'all'
} %}
<section {{ block_attrs( block ) }}>
	<div class="alignwide">
		{{ inner_blocks( inner ) }}
	</div>
</section>
