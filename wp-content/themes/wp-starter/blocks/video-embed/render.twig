{#
  Block: Video Embed
#}

{% set template = [
	[
		'core/pattern',
		{
			slug: 'wp-starter/video-embed-inner-blocks'
		}
	],
] %}
{% set allowed = [
	'core/heading',
	'core/paragraph',
	'core/embed'
] %}
{% set inner = {
	template: template,
	allowedBlocks: allowed
} %}
<section {{ block_attrs( attributes ) }}>
  <div class="flex flex-col">{{ inner_blocks( inner ) }}</div>
</section>
