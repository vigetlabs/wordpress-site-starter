{#
Block: Alert Banner
#}

{% set template = [
	[
		'core/paragraph',
		{
			'placeholder': 'Enter alert banner message...'
		}
	]
] %}
{% set allowed = [
	'core/paragraph',
	'core/button',
] %}
{% set inner = {
	template: template,
	allowedBlocks: allowed
} %}
<section {{ block_attrs( attributes, 'gap-24 lg:gap-48' ) }}>
	<div class="flex flex-col gap-24 items-start lg:flex-row lg:gap-48 lg:items-center">{{ inner_blocks( inner ) }}</div>
	{{ function( 'alert_banner_dismiss_button' ) }}
</section>
