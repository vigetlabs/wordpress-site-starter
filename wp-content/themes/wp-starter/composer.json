{
  "name": "viget/wordpress-site-starter",
  "version": "0.1.0",
  "description": "A custom WordPress Site Starter Kit by Viget.",
  "keywords": [
    "wordpress",
    "components",
    "cms",
    "ddev",
    "tailwind",
    "vite"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Viget",
      "homepage": "https://viget.com/"
    }
  ],
  "autoload": {
    "psr-4": {
      "Viget\\ComposerScripts\\": "../../../bin/composer-scripts/"
    }
  },
  "require": {
    "php": ">=8.2.0",
    "ext-json": "*",
    "idleberg/wordpress-vite-assets": "^1.2",
    "squizlabs/php_codesniffer": "^3.11",
    "timber/timber": "^2.3",
    "wpackagist-plugin/accessibility-checker": "^1.17",
    "wpackagist-plugin/safe-svg": "^2.3",
    "wpackagist-plugin/seo-by-rank-math": "^1.0",
    "wpackagist-plugin/wordfence": "^8.0"
  },
  "require-dev": {
    "phpcompatibility/phpcompatibility-wp": "^2",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "composer",
      "url": "https://connect.advancedcustomfields.com"
    },
    {
      "type": "path",
      "url": "../../plugins/viget-blocks-toolkit"
    },
    {
      "type": "path",
      "url": "../../plugins/viget-form-blocks"
    },
    {
      "type": "path",
      "url": "../../plugins/viget-parts-kit"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "Viget\\ComposerScripts\\ProjectEventHandler::postInstall"
    ],
    "generate-docs": "Viget\\ComposerScripts\\WPDocsGeneratorScript::make"
  },
  "extra": {
    "installer-paths": {
      "../../mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "../../plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "../../themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
