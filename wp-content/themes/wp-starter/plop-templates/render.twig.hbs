{#
  Block: {{titleCase name}}
#}

{% set template = [
	[
		'core/pattern',
		{
			'slug': '{{dashCase themeslug}}/{{dashCase name}}-inner-blocks',
		}
	]
] %}

{# If you need to limit what block types are allowed
{% set allowed = [
	'core/group',
] %}
#}

{% set inner = {
	template: template,
	allowedBlocks: allowed
} %}


<section \{{ block_attrs( attributes ) }}>
  \{{ inner_blocks( inner ) }}
</section>
