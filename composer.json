{
  "name": "viget/wordpress-site-starter",
  "description": "A custom WordPress Site Starter Kit by Viget.",
  "keywords": [
    "wordpress",
    "components",
    "boilerplate",
    "cms",
    "ddev",
    "tailwind",
    "vite"
  ],
  "type": "project",
  "homepage": "https://github.com/vigetlabs/wordpress-site-starter",
  "license": "MIT",
  "authors": [
    {
      "name": "Viget",
      "homepage": "https://viget.com/"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Viget\\ComposerScripts\\": "bin/composer-scripts/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "Viget\\ComposerScripts\\ProjectEventHandler::postCreateProject",
      "@composer install"
    ],
    "post-install-cmd": [
      "Viget\\ComposerScripts\\ProjectEventHandler::postInstall"
    ],
    "generate-docs": "Viget\\ComposerScripts\\WPDocsGeneratorScript::make"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type":"composer",
      "url":"https://connect.advancedcustomfields.com"
    }
  ],
  "require": {
    "php": ">=8.2.0",
    "ext-json": "*",
    "squizlabs/php_codesniffer": "^3.9",
    "wpackagist-plugin/svg-support": "^2.5",
    "wpengine/advanced-custom-fields-pro": "^6.2"
  },
  "require-dev": {
    "composer/composer": "^2.7",
    "phpcompatibility/phpcompatibility-wp": "^2",
    "symfony/console": "^7.0",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "extra": {
    "installer-paths": {
      "wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
