{
  "name": "viget/wordpress-site-starter",
  "description": "A custom WordPress Site Starter Kit by Viget.",
  "keywords": [
    "wordpress",
    "components",
    "boilerplate",
    "cms",
    "ddev",
    "tailwind",
    "vite"
  ],
  "type": "wordpress-core",
  "homepage": "https://github.com/vigetlabs/wordpress-site-starter",
  "license": "MIT",
  "authors": [
    {
      "name": "Viget",
      "homepage": "https://viget.com/"
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "johnpbloch/wordpress-core-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Viget\\ComposerScripts\\": "bin/composer-scripts/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "Viget\\ComposerScripts\\ProjectEventHandler::postInstall"
    ],
    "post-create-project-cmd": [
      "Viget\\ComposerScripts\\ProjectEventHandler::postCreateProject"
    ],
    "generate-docs": "Viget\\ComposerScripts\\WPDocsGeneratorScript::make"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "squizlabs/php_codesniffer": "^3.9",
    "johnpbloch/wordpress": "^6.5"
  },
  "require-dev": {
    "composer/composer": "^2.7",
    "phpcompatibility/phpcompatibility-wp": "^2",
    "symfony/console": "^7.0",
    "wp-coding-standards/wpcs": "^3.1"
  },
  "provide": {
    "wordpress/core-implementation": "6.5.*"
  },
  "extra": {
    "wordpress-install-dir": "./",
    "installer-paths": {
      "wp-content/mu-plugins/{$name}": [
        "type:wordpress-muplugin"
      ],
      "wp-content/plugins/{$name}": [
        "type:wordpress-plugin"
      ],
      "wp-content/themes/{$name}": [
        "type:wordpress-theme"
      ]
    }
  }
}
